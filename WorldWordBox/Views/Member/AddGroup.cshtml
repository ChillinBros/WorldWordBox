<script>
        $(function () {

            $("#btnAddGroup").click(function () {
                var form = $('#__AjaxAntiForgeryForm');
                var token = $('input[name="__RequestVerificationToken"]', form).val();

                var groupName = $("#txtGroupName").val();



                if (groupName.length == 0)
                    return;

                var data = { "groupName": groupName, "__RequestVerificationToken": token };

                $.post("/Member/AddGroup", data, function (result) {
                    if (result == 0) {
                        alert("eklendi");
                    } else if (result == 1) {
                        alert("Bilinmeyen hata");
                    } else if (result == 2) {
                        alert("Bu grubu zaten eklemişsiniz");
                    }
                });
            });
        });
</script>


